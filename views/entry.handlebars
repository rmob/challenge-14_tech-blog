<section class="container">
<div class="page-title">
        <div>{{entry.title}}</div>
        <div id="byline">created by: {{entry.user.user_name}} </div>
      </div>
<p class="blog-border blog-content">{{entry.content}}</p>

<div class="comments-header">Comments</div>
{{#each entry.comments as |comment|}}
<div class="blog-content comments-content">
<p class="comment-p">{{comment.content}}</p>
</div>
{{/each}}
<textarea class="form-input" id="comment-textarea" placeholder="write comment here..."></textarea>
<div class="btn-row">
<button id="comment-submit-btn">Submit</button>
</div>




</section>
<script src="/js/createComment.js"></script>