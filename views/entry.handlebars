<section class="container">
<div class="page-title">{{entry.title}}</div>
<p class="blog-container">{{entry.content}}</p>
<label for="user-name-field"></label>
<input class="form-input" type="input" id="user-name-field" placeholder="enter username here..."></input>
<textarea class="form-input" id="comment-textarea" placeholder="write comment here..."></textarea>
<div class="btn-row">
<button id="comment-submit-btn">Submit</button>
</div>
<p>{{entry.user.user_name}}</p>

{{#each entry.comments as |comment|}}
<p>{{comment.content}}</p>
<p>{{comment.id}}</p>
{{/each}}


</section>
<script src="/js/createComment.js"></script>